@model AgendamentoServicos
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Alterar Serviços ";
} 
<h1>@ViewData["Title"]</h1>

<p class="text-danger">@ViewData["mensagem"]</p>

<form method="post" action="alterar">
    <p>
        <label for="Nome">Nome</label>
        <input asp-for = "Nome">
    </p>
      <p>
        <label for="DataSolicitacao ">Data da Solicitacao</label>
        <input asp-for = "DataSolicitacao ">
    </p>
     <p>
        <label for="Servico">Serviço</label>
        <input asp-for = "Servico">
    </p>

     <p>
        <input asp-for="Id" type="hidden">
        <input type="submit" value="Alterar">
    </p>
</form>