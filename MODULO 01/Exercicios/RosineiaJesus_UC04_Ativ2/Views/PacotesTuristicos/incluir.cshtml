@model PacotesTuristicos
@using Microsoft.AspNetCore.Http;


@{
    ViewData["Title"] = "Incluir Pacotes Turisticos";
} 


<h1>@ViewData["Title"]</h1>

<p class="text-danger">@ViewData["mensagem"]</p>

<form method="post" asp-action="incluir">

    <p>
        <label asp-for="Nome">Nome</label>
        <input asp-for = "Nome">
    </p>
      <p>
        <label asp-for="Origem">Origem</label>
        <input asp-for = "Origem">
    </p>
     <p>
        <label asp-for="Destino">Destino</label>
        <input asp-for = "Destino">
    </p>

     <p>
        <label asp-for="Atrativos">Atrativos</label>
        <input asp-for = "Atrativos">
    </p>
    <p>
        <label asp-for="Saida">Saida</label>
        <input asp-for = "Saida" type="date">
    </p>
    <p>
        <label for="Retorno">Retorno</label>
        <input asp-for = "Retorno" type="date">
    </p>
        
     
     <p>
        <input type="submit" value="Cadastrar Pacotes">   
    </p>
    <input value=@Context.Session.GetInt32("IdUsuario") type="hidden">
 </form>