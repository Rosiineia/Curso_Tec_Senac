@model PacotesTuristicos
@using Microsoft.AspNetCore.Http;


@{
    ViewData["Title"] = "incluir Pacotes Turisticos";
} 


<h1>@ViewData["Title"]</h1>

<p class="text-danger">@ViewData["mensagem"]</p>

<form method="post" action="incluir">

    <p>
        <label for="Nome">Nome</label>
        <input asp-for = "Nome">
    </p>
      <p>
        <label for="Origem">Origem</label>
        <input asp-for = "Origem">
    </p>
     <p>
        <label for="Destino">Destino</label>
        <input asp-for = "Destino">
    </p>

     <p>
        <label for="Atrativos">Atrativos</label>
        <input asp-for = "Atrativos">
    </p>
    <p>
        <label for="Saida">Saida</label>
        <input asp-for = "Saida" type="date">
    </p>
    <p>
        <label for="Retorno">Retorno</label>
        <input asp-for = "Retorno" type="date">
    </p>
        
     <input value=@Context.Session.GetInt32("IdUsuario")>
     <p>
        <input type="submit" value="Cadastrar Pacotes">
    </p>
 </form>