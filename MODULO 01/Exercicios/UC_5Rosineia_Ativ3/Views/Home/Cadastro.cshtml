@model Agendamento

<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">

  <title>Shop pet</title>
</head>

<body>
  <header>

    <h1>Shop Pet</h1>

    <nav>
      <a asp-controller="Home" asp-action="Index">Incio</a>
      <a asp-controller="Home" asp-action="Privacy">Servi√ßos</a>
      <a asp-controller="Home" asp-action="Cadastro">Agendamento</a>
    </nav>
  </header>
  <div>
    <main>
      <h2>Agende a consulta de seu pet!!</h2>
      <br>
      <h3>Agendamento</h3>
      <br>
      <p>Favor preencher os dados abaixo</p>

      <form method="POST" asp-controller="Home" asp-action="Cadastro">
        <p>
          <label asp-for="nome"> Nome: </label>
          <input asp-for="nome">
        </p><br>
        <p>
          <label asp-for="telefone"> Telefone: </label>
          <input asp-for="telefone">
        </p>
        <p>
          <label asp-for="data">Data do Atendimento : </label>
          <input type="date" name="" asp-for="data" required>
        </p>
        <br>
        <p>
          <label asp-for="animal">Selecionar animal : </label>
          <select asp-for="animal" required>
            <option value="Gato filhote"></option>
            <option value="Gato filhote">Gato filhote</option>
            <option value="Cachorro filhote">Cachorro filhote</option>
            <option value="Passaro de pequeno porte">Passaro pequeno porte</option>
            <option value="Passaro de grande porte">Passaro de grande porte</option>
            <option value="Cachorro Adulto">Cachorro Adulto</option>
            <option value="Gato Adulto">Gato Adulto</option>
          </select>
        </p>
        <p>
          <label asp-for="necessidade">Necessidade : </label>
        </p>
        <textarea asp-for="necessidade" name="necessidade" cols="40" rows="15"
          required>Descrever necessidade do pet: </textarea><br>
          <input type="submit" value="Cadastrar Agendamento">
      </form>
    </main>
  </div>
</body>

</html>
