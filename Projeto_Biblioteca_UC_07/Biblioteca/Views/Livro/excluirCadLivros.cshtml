@model Livro

<h1>ALERTA!</h1>
<H2>Tem certeza que deseja excluir o Livro Cadastrado @Model.Autor ?</H2>
<p>A exclusão é irreversível</p>

<form action="excluirCadLivros" method="post">
    <input type="hidden" name="id" value="@Model.Id">

    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR">
</form>